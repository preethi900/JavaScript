/**
 * @param {number} num
 * @return {boolean}
 */
var isPowerOfFour = function(num) {
    var s = 1;
    if(num === 1) {
        return true;
    }
    if(num < 4) {
        return false;
    }
  while(s < num) {
       s *= 4;
      if(s === num) {
          return true;
      }
  }  
    return false;
};



//Easy Logic
var isPowerOfFour = function(n) {
    let i =1;
    while (i < n) {
        i *= 4;
    }
    return i === n;
};
