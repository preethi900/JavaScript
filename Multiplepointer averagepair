function avgpair(arr,val) {
    let  i = 0;
    let j = arr.length - 1;
    while (i <  j) {
        let avg = (arr[i] + arr[j])/2;
        if((avg === val) {
            return true;
        } else if (avg < val) {
            i++;
        } else {
            j--;
        }

    }
    return false;
    }
}


console.log(avgPair([1,2,3],2.5));
